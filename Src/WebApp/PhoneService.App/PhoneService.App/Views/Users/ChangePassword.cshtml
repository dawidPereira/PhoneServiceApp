@using PhoneService.App.DTO.Users
@model PhoneService.App.DTO.Users.UserAdminForEditDto

<h2>Zmień hasło</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="Users" method="post" asp-antiforgery="true" asp-route-id="">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UserId"/>
            <div class="form-group">
                Nazwa Użytkownika:
                <input asp-for="Username" class="form-control" disabled/>
            </div>
            <div class="form-group">
                Email:
                <input asp-for="Email" class="form-control" disabled/>
            </div>
            <div class="form-group">
                Obecne hasło
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                Nowe hasło:
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                Potwierdź nowe hasło:
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                Uprawnienia:
                <input asp-for="RoleName" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz dane" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Users">Powrót</a>
</div>