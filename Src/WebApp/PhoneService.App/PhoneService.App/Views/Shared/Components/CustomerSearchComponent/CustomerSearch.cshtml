@model PhoneService.Core.Models.Customer.CustomerSearchRequest


<form class="row" asp-controller="Customer" asp-action="Index" method="get">
    <div class="col-sm-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNum" class="control-label"></label>
            <input asp-for="PhoneNum" class="form-control" />
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group">
            <label asp-for="TaxNum" class="control-label"></label>
            <input asp-for="TaxNum" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="col-sm-12">
        <input type="submit" value="Szukaj" class="btn btn-block" />
    </div>
    
</form>


