@model IEnumerable<PhoneService.Core.Models.Product.ProductResponse>


<div class="row">
    <div class="col-sm-12">
        <div class="col-sm-9">

        </div>
        <div class="col-sm-3">
            <a class="btn btn-outline-dark" asp-action="AddProduct" asp-controller="Product">Dodaj nowy produkt</a>
        </div>
    </div>
    <div>
        <table class="table table-dark">
            <thead class="tab-pane">
                <tr>
                    <th>Numer Id</th>
                    <th>Producent</th>
                    <th>Model</th>
                    <th>Opis</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="tab-content">
                @foreach (var product in Model)
                {
                    <tr>

                        <td>@product.ProductId</td>
                        <td>@product.Producer</td>
                        <td>@product.Model</td>
                        <td>@product.Description</td>
                        <td>
                            <p>
                                <a class="active" asp-action="AddRepair" asp-controller="Repair" asp-route-productId="@product.ProductId">Wybierz</a>
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

