@model PhoneService.Core.Models.Repair.RepairSearchRequest

<section class="search-component search-component--repair">
    <p class="h5"><i class="fa fa-search"></i> Wyszukiwarka</p>
    <hr>
    <form class="row" asp-controller="Repair" asp-action="Index" method="get">
        <div class="col-sm-2 col-xs-12">
            <div class="form-group input-group-sm">
                <!-- <label asp-for="CustomerName" class="control-label"></label> -->
                <input asp-for="CustomerName" class="form-control" placeholder="Imię" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm">
                <!-- <label asp-for="CustomerLastName" class="control-label"></label> -->
                <input asp-for="CustomerLastName" class="form-control" placeholder="Nazwisko" />
                <span asp-validation-for="CustomerLastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-xs-12">
            <div class="form-group input-group-sm">
                <!-- <label asp-for="Email" class="control-label"></label> -->
                <input asp-for="Email" class="form-control" placeholder="Adres e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm">
                <!-- <label asp-for="PhoneNumber" class="control-label"></label> -->
                <input asp-for="PhoneNumber" class="form-control" placeholder="Numer telefonu" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-xs-12">
            <div class="form-group input-group-sm">
                <!-- <label asp-for="ModelName" class="control-label"></label> -->
                <input asp-for="ModelName" class="form-control" placeholder="Nazwa modelu" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm">
                <!-- <label asp-for="ProducerName" class="control-label"></label> -->
                <input asp-for="ProducerName" class="form-control" placeholder="Nazwa producenta" />
                <span asp-validation-for="ProducerName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-xs-12">
            <div class="form-group input-group-sm">
                <!-- <label asp-for="DateFrom" class="control-label"></label> -->
                <input type="date" asp-for="DateFrom" class="form-control" placeholder="Data od" min="1979-12-31" max="2099-12-31"/>
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm">
                <!-- <label asp-for="DateTo" class="control-label"></label> -->
                <input type="date" asp-for="DateTo" class="form-control" placeholder="Data do" min="1979-12-31" max="2099-12-31"/>
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-xs-12">
            <div class="form-group input-group-sm">
                <select asp-for="StatusName" asp-items="new SelectList(@Model.StatusList)" class="form-control">
                    <option selected value="">Wybierz status</option>
                </select>
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-xs-12">
            <div class="form-group">
                <button type="submit" value="Szukaj" class="btn btn-block btn-primary btn-sm"><i class="fa fa-search" aria-hidden="true"></i> Szukaj</button>
            </div>
            <div class="form-group">
                <a asp-controller="Repair" asp-action="Index" class="btn btn-block btn-outline-info btn-sm">Wyczyść filtry</a>
            </div> 
        </div>
    </form>
</section>



