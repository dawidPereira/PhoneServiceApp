@model PhoneService.Core.Models.Product.ProductSearchRequest
<p class="h5"><i class="fa fa-search" aria-hidden="true"></i> Wyszukiwarka</p>
<hr>
<form class="row" asp-controller="Product" asp-action="Index" method="get">
    <div class="col-sm-2">
        <div class="form-group">
            <input asp-for="Producer" class="form-control form-control-sm" placeholder="Producent" />
            <span asp-validation-for="Producer" class="text-danger"></span>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="form-group">
            <input asp-for="Model" class="form-control form-control-sm" placeholder="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="form-group">
            <button type="submit" value="Szukaj" class="btn btn-block btn-primary btn-sm"><i class="fa fa-search" aria-hidden="true"></i> Szukaj</button>
        </div>
        <div class="form-group">
            <a asp-controller="Product" asp-action="Index" class="btn btn-block btn-outline-info btn-sm">Wyczyść filtry</a>
        </div> 
    </div>
</form>


