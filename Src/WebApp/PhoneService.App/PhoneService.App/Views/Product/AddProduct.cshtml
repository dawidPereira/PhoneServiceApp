@model PhoneService.Core.Models.Product.ProductAddRequest

<h2>Dodaj nowy produkt</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" asp-controller="Product" method="post" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="">Producent</label>
                <input asp-for="Producer" class="form-control" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label for="">Model</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Opis</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj produkt" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <p><a asp-action="Index" asp-controller="Product"><i class="fa fa-arrow-left" aria-hidden="true"></i> Powrót do listy</a></p>
</div>

