@model IEnumerable<PhoneService.Core.Models.Product.ProductResponse>

<div class="col-sm-12">
    <a class="btn btn-outline-dark" asp-action="AddProduct" asp-controller="Product">Dodaj produkt</a>
</div>
<hr />
<div>
    <table class="table table-dark">
        <thead class="tab-pane">
            <tr>
                <th>Numer Id</th>
                <th>Producent</th>
                <th>Model</th>
                <th>Opis</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="tab-content">
            @foreach (var product in Model)
            {
                <tr>

                    <td>@product.ProductId</td>
                    <td>@product.Producer</td>
                    <td>@product.Model</td>
                    <td>@product.Description</td>
                    <td>
                        <p>
                            <a class="active" asp-action="Details" asp-controller="Product" asp-route-id="@product.ProductId">Szczegóły</a> |
                            <a class="active" asp-action="UpdateProduct"
                               asp-controller="Product" asp-route-id="@product.ProductId">Edytuj</a>
                        </p>
                    </td>
                    <td>
                        <form class="active" asp-action="RemoveProduct" method="post"
                              asp-controller="Product" asp-route-id="@product.ProductId">
                            <input type="submit" value="Usuń" class="btn btn-sm"
                                   onclick="return confirm('Czy na pewno chcesz usunać ten produkt?')" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
