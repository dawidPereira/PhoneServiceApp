@model PhoneService.App.DTO.Account.UserForLoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}


<form class="form-signin" asp-action="Login" asp-controller="Account" method="post">
    <h3 class="mb-3 font-weight-normal">Logowanie do Aplikacji</h3>
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="inputEmail" class="sr-only">Nazwa Użytkownika</label>
        <input asp-for="Username" class="form-control" placeholder="Nazwa Użytkownika" required/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="sr-only">Hasło</label>
        <input asp-for="Password" class="form-control" placeholder="Hasło" required/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Zaloguj" class="btn btn-lg btn-primary btn-block"/>
    </div>
    <p class="mt-5 mb-3 text-muted">PhoneServiceApp &copy; 2018-2019</p>
</form>


